<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <info>
        <appname>RV Predict</appname>
        <appversion>1.0</appversion>
		<appsubpath>RVPredict</appsubpath>
        <authors>
            <author name="Runtime Verification, Inc." email="rv@runtimeverification.com"/>
        </authors>
        <url>http://www.runtimeverification.com/</url>
    </info>

    <guiprefs width="640" height="480" resizable="yes">
		<modifier key="useHeadingPanel" value="yes"/>
		<modifier key="headingImageOnLeft" value="yes"/>
		<modifier key="headingFontSize" value="1"/>
		<modifier key="headingLineCount" value="1"/>
		<modifier key="headingPanelCounter" value="text"/>
		<modifier key="headingPanelCounterPos" value="inNavigationPanel"/>
	<!--	<modifier key="layoutAnchor" value="NORTHWEST"/> -->
	</guiprefs>

    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
	<!--
		<res id="TargetPanel.dir.windows" src="util/TargetDir.Windows.txt"/>
		<res id="TargetPanel.dir.unix" src="util/TargetDir.Unix.txt"/>
	-->
		<res id="Heading.image" src="util/rv-logo.png"/>
    </resources>
	
	
	<variables>
		<variable name="TargetPanel.dir.windows" value="C:/rvpredict"/>
		<variable name="TargetPanel.dir.unix" value="rvpredict"/>
	</variables>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
		<panel classname="PrerequisitePanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="SafeTargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="EditedFinishPanel"/>
    </panels>

    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="RV Predict Tool" required="yes">
            <description>The core files: RV Predict libraries (JAR files) and scripts</description>
            <file src="Readme.txt" targetdir="$INSTALL_PATH"/>
            <file src="Licence.txt" targetdir="$INSTALL_PATH"/>
			<file src="./sources/win" targetdir="$INSTALL_PATH">
				<os family="windows"/>
			</file>
			<file src="./sources/unix" targetdir="$INSTALL_PATH">
				<os family="unix"/>
			</file>

		   	<file src="./sources/rv-instrumentor.jar" targetdir="$INSTALL_PATH/win">
				<os family="windows"/>
			</file>
			<file src="./sources/rv-predictor.jar" targetdir="$INSTALL_PATH/win">
				<os family="windows"/>
			</file>
			<file src="./sources/rv-recorder.jar" targetdir="$INSTALL_PATH/win">
				<os family="windows"/>
			</file>
			<file src="./sources/rv-replayer.jar" targetdir="$INSTALL_PATH/win">
				<os family="windows"/>
			</file>
			
			<file src="./sources/rv-instrumentor.jar" targetdir="$INSTALL_PATH/unix">
				<os family="unix"/>
			</file>
			<file src="./sources/rv-predictor.jar" targetdir="$INSTALL_PATH/unix">
				<os family="unix"/>
			</file>
			<file src="./sources/rv-recorder.jar" targetdir="$INSTALL_PATH/unix">
				<os family="unix"/>
			</file>
			<file src="./sources/rv-replayer.jar" targetdir="$INSTALL_PATH/unix">
				<os family="unix"/>
			</file>
        </pack>
		<pack name="Examples" required="no">
            <description>Some simple examples to start with</description>
            <file src="demo" targetdir="$INSTALL_PATH"/>
        </pack>	
	<!--
		<pack name="Docs" required="no">
            <description>The documentation</description>
            <file src="doc" targetdir="$INSTALL_PATH"/>
        </pack>		
	-->
    </packs>

</installation>
