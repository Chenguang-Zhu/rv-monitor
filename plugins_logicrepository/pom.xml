<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.runtimeverification.rvmonitor</groupId>
        <artifactId>parent</artifactId>
        <version>1</version>
        <relativePath>../parent/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.runtimeverification.rvmonitor</groupId>
    <artifactId>plugins_logicrepository</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>cfg</module>
        <module>ere</module>
        <module>fsm</module>
        <module>ltl</module>
        <module>pda</module>
        <module>po</module>
        <module>ptcaret</module>
        <module>ptltl</module>
        <module>srs</module>
        <module>tfsm</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>cfg</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>ere</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>fsm</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>ltl</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>ptcaret</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>pda</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>po</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>srs</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>tfsm</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.runtimeverification.rvmonitor</groupId>
            <artifactId>ptltl</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/plugins/</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>cfg</artifactId>
                                    <destFileName>cfg.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>ere</artifactId>
                                    <destFileName>ere.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>fsm</artifactId>
                                    <destFileName>fsm.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>ltl</artifactId>
                                    <destFileName>ltl.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>ptcaret</artifactId>
                                    <destFileName>ptcaret.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>pda</artifactId>
                                    <destFileName>pda.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>po</artifactId>
                                    <destFileName>po.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>srs</artifactId>
                                    <destFileName>srs.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>tfsm</artifactId>
                                    <destFileName>tfsm.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.runtimeverification.rvmonitor</groupId>
                                    <artifactId>ptltl</artifactId>
                                    <destFileName>ptltl.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
